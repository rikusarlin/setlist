{
  "name": "setlist",
  "version": "1.0.0",
  "description": "Software for managing bands' pieces and setlists",
  "main": "index.js",
  "scripts": {
    "start": "cd ./backend && cross-env NODE_ENV=prod node index.js",
    "watch": "cd ./backend && cross-env NODE_ENV=dev nodemon index.js",
    "test": "cd ./backend && cross-env NODE_ENV=test jest --verbose --runInBand 
--detectOpenHandles --collectCoverage",
    "start:test": "cd ./backend && cross-env NODE_ENV=test node index.js",
    "eslint": "cd ./backend && eslint .",
    "format": "cd ./backend && prettier --write",
    "build:ui": "rm -rf ./backend/build && cd ./frontend/ && npm run build:prod 
&& cp -r build ../backend",
    "deploy": "git push heroku main",
    "deploy:full": "npm run build:ui && git add . && git commit -m uibuild && git push && npm run deploy",    
    "logs:prod": "heroku logs --tail"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rikusarlin/setlist"
  },
  "author": "rikusarlin",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^5.7.13",
    "mongoose-unique-validator": "^2.0.3"
  },
  "devDependencies": {
    "cross-env": "^6.0.3",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^26.4.2",
    "nodemon": "^2.0.1",
    "prettier": "^2.5.1",
    "supertest": "^4.0.2"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
